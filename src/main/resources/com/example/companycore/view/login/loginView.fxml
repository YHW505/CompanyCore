<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane style="-fx-background-color: #D6D8EB;"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.companycore.controller.core.LoginController">

    <children>
        <VBox alignment="CENTER" maxWidth="380.0" spacing="45.0">
            <children>
                <!-- 상단 로고 영역 -->
                <HBox alignment="CENTER" spacing="12.0">
                    <children>
                        <ImageView fitHeight="50.0" fitWidth="50.0">
                            <image>
                                <Image url="@../../../images/logo/logo_image.png"/>
                            </image>
                        </ImageView>
                        <Label text="CompanyCore"
                               style="-fx-font-size: 32px;
                                      -fx-font-weight: bold;
                                      -fx-text-fill: #2c5282;"/>
                    </children>
                </HBox>

                <!-- 입력 폼 영역 -->
                <VBox alignment="CENTER" spacing="18.0">
                    <children>

                        <!-- 직원 ID 입력 -->
                        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="320.0"
                              style="-fx-background-color: white;
                                     -fx-background-radius: 25;
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0, 0, 1);">
                            <children>
                                <Label text="✉"
                                       style="-fx-font-size: 25px; -fx-text-fill: #9ca3af;"/>
                                <TextField fx:id="usernameField" promptText="employee ID"
                                           HBox.hgrow="ALWAYS"
                                           style="-fx-background-color: transparent;
                                                  -fx-border-color: transparent;
                                                  -fx-font-size: 14px;
                                                  -fx-prompt-text-fill: #9ca3af;"/>
                            </children>
                            <padding>
                                <Insets top="5.0" right="20.0" bottom="5.0" left="20.0"/>
                            </padding>
                        </HBox>

                        <!-- 비밀번호 입력 -->
                        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="320.0"
                              style="-fx-background-color: white;
                                     -fx-background-radius: 25;
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0, 0, 1);">
                            <children>
                                <Label text="🔒"
                                       style="-fx-font-size: 16px; -fx-text-fill: #9ca3af;"/>
                                <PasswordField fx:id="passwordField" promptText="Password"
                                               HBox.hgrow="ALWAYS"
                                               style="-fx-background-color: transparent;
                                                      -fx-border-color: transparent;
                                                      -fx-font-size: 14px;
                                                      -fx-prompt-text-fill: #9ca3af;"/>
                            </children>
                            <padding>
                                <Insets top="5.0" right="20.0" bottom="5.0" left="20.0"/>
                            </padding>
                        </HBox>

                        <!-- 로그인 버튼 -->
                        <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                                prefHeight="50.0" prefWidth="320.0"
                                style="-fx-background-color: #2563eb;
                                       -fx-text-fill: white;
                                       -fx-background-radius: 25;
                                       -fx-font-size: 16px;
                                       -fx-font-weight: bold;
                                       -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, rgba(37,99,235,0.3), 8, 0, 0, 2);"/>

                        <!-- 로딩 인디케이터 -->
                        <ProgressIndicator fx:id="loadingIndicator" prefHeight="30.0" prefWidth="30.0"
                                           visible="false"
                                           style="-fx-accent: #2563eb;"/>

                        <!-- 사번 조회 -->
                        <Label fx:id="clickableText" text="사번 조회" onMouseClicked="#handleEmployeeIdInquiry"
                               style="-fx-text-fill: #2563eb;
                                      -fx-cursor: hand;
                                      -fx-font-size: 14px;
                                      -fx-underline: true;"/>

                        <!-- 상태 메시지 -->
                        <Label fx:id="statusLabel"
                               text=""
                               style="-fx-text-fill: #205992; -fx-font-size: 12px;"/>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>