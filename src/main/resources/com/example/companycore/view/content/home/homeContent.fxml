<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.companycore.controller.HomeContentController"
      spacing="20" style="-fx-padding: 20;">
    <!-- 상단 헤더 -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="홈화면" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>
    
    <!-- 메인 콘텐츠 -->
    <HBox spacing="20">
        <!-- 왼쪽 컬럼 -->
        <VBox spacing="20" HBox.hgrow="ALWAYS">
            <!-- 공지사항 -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="공지사항" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <VBox fx:id="announcementBox" spacing="10" style="-fx-padding: 10 0 0 0;"/>
            </VBox>

            <!-- 최근 출근 기록 -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="최근 출근 기록" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <VBox fx:id="recentAttendanceBox" spacing="10" style="-fx-padding: 10 0 0 0;"/>
            </VBox>

            <!-- 처리해야 할 결재 요청 -->
            <VBox fx:id="pendingApprovalBox" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" visible="false">
                <Label text="처리해야 할 결재 요청" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <HBox alignment="CENTER_LEFT" spacing="5" style="-fx-padding: 10 0 0 0;">
                    <Label text="" fx:id="pendingApprovalCountLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                    <Label text="이 있습니다." style="-fx-font-size: 18px; -fx-text-fill: #2c3e50;"/>
                </HBox>
                <Label text="클릭하여 결재 요청 목록으로 이동" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d; -fx-padding: 5 0 0 0;"/>
            </VBox>
        </VBox>
        
        <!-- 오른쪽 컬럼 -->
        <VBox spacing="20" HBox.hgrow="ALWAYS">
            <!-- 사용자 프로필 카드 -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="🏢" style="-fx-font-size: 16px;"/>
                    <Label text="companyCore" style="-fx-font-weight: bold;"/>
                </HBox>
                <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20 0;">
                    <Label text="🐟" style="-fx-font-size: 48px;"/>
                    <Label text="000" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label text="사원" style="-fx-text-fill: #7f8c8d;"/>
                </VBox>
                <HBox alignment="CENTER" spacing="10">
                    <HBox alignment="CENTER" spacing="10">
                        <Label text="근무 상태:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <HBox fx:id="toggleSwitch" styleClass="toggle-switch"
                              onMouseClicked="#handleToggleClick">
                            <HBox fx:id="toggleButton" styleClass="toggle-button" 
                                  alignment="CENTER">
                                <Label fx:id="toggleText" text="퇴근" styleClass="toggle-text"/>
                            </HBox>
                        </HBox>
                    </HBox>
                    <Label fx:id="userStatusLabel" text="퇴근" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>
            
            <!-- 간단한 캘린더 -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="캘린더" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <Label text="January 2025" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-padding: 10 0;"/>
                <Label text="오늘: 2025년 1월 7일" style="-fx-font-size: 12px; -fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
            </VBox>
        </VBox>
    </HBox>
</VBox> 