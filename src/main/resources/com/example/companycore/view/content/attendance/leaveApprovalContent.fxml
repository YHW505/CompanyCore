<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.companycore.controller.attendance.LeaveApprovalController"
      prefHeight="785.0" prefWidth="819.0" spacing="20" style="-fx-padding: 20;">
    
    <!-- 상단 헤더 -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="휴가 승인" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>
    
    <!-- 메인 콘텐츠 -->
    <VBox prefHeight="635.0" prefWidth="779.0" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        
        <!-- 검색 및 필터 영역 -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
        
        <!-- 테이블 -->
        <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <!-- 테이블 헤더 -->
            <HBox style="-fx-background-color: #f8f9fa; -fx-padding: 15 25; -fx-border-color: #e9ecef; -fx-border-width: 0 0 1 0;">
                <CheckBox fx:id="selectAllCheckBox" style="-fx-min-width: 50; -fx-alignment: CENTER; -fx-padding: 0 0 0 10;"/>
                <Label text="휴가 종류" style="-fx-font-weight: bold; -fx-alignment: CENTER; -fx-min-width: 200; -fx-pref-width: 200;"/>
                <Label text="사번" style="-fx-font-weight: bold; -fx-alignment: CENTER; -fx-min-width: 150; -fx-pref-width: 150;"/>
                <Label text="사원이름" style="-fx-font-weight: bold; -fx-alignment: CENTER; -fx-min-width: 200; -fx-pref-width: 200;"/>
                <Label text="일자" style="-fx-font-weight: bold; -fx-alignment: CENTER; -fx-min-width: 200; -fx-pref-width: 200;"/>
                <Label text="거부/승인" style="-fx-font-weight: bold; -fx-alignment: CENTER; -fx-min-width: 200; -fx-pref-width: 200;"/>
            </HBox>
            
            <!-- 테이블 데이터 -->
            <VBox fx:id="tableData" spacing="0" prefHeight="427.0" maxHeight="427">
                <!-- 동적으로 생성될 데이터 -->
            </VBox>
        </VBox>
        
        <!-- 삭제 버튼 -->
        <HBox spacing="20" alignment="CENTER_RIGHT">
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="deleteButton" mnemonicParsing="false" text="삭제"
                    style="-fx-background-color: #444951; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;" />
            <Region prefWidth="80" />
        </HBox>
        
        <!-- 페이지네이션 -->
        <HBox spacing="20" alignment="CENTER">
            <Region HBox.hgrow="ALWAYS" />
            <Pagination fx:id="pagination" prefHeight="45.0" prefWidth="600.0"
                        style="-fx-page-information-visible: false; -fx-arrows-visible: true; -fx-background-color: transparent;">
                <stylesheets>
                    <URL value="@../common/pagination.css" />
                </stylesheets>
            </Pagination>
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
        
    </VBox>
    
</VBox> 