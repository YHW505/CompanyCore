<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      spacing="20" style="-fx-padding: 20;">
    <!-- 상단 헤더 -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="출근기록부" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>
    
    <!-- 메인 콘텐츠 -->
    <HBox spacing="20">
        <!-- 왼쪽 컬럼 -->
        <VBox spacing="20" HBox.hgrow="ALWAYS">
            <!-- 출근 시간 -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="출근 시간" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="🕐" style="-fx-font-size: 16px;"/>
                        <Label text="09:00" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="📅" style="-fx-font-size: 16px;"/>
                        <Label text="2025년 1월 7일" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                </VBox>
            </VBox>
            
            <!-- 퇴근 시간 -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="퇴근 시간" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="🕐" style="-fx-font-size: 16px;"/>
                        <Label text="18:00" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="⏱️" style="-fx-font-size: 16px;"/>
                        <Label text="총 근무시간: 9시간" style="-fx-font-size: 14px; -fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>
            </VBox>
            
            <!-- 이번 주 근무 현황 -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="이번 주 근무 현황" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <VBox spacing="5" style="-fx-padding: 10 0 0 0;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="월" style="-fx-font-weight: bold; -fx-min-width: 30;"/>
                        <Label text="09:00 - 18:00" style="-fx-text-fill: #27ae60;"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="화" style="-fx-font-weight: bold; -fx-min-width: 30;"/>
                        <Label text="09:00 - 18:00" style="-fx-text-fill: #27ae60;"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="수" style="-fx-font-weight: bold; -fx-min-width: 30;"/>
                        <Label text="09:00 - 18:00" style="-fx-text-fill: #27ae60;"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="목" style="-fx-font-weight: bold; -fx-min-width: 30;"/>
                        <Label text="09:00 - 18:00" style="-fx-text-fill: #27ae60;"/>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="금" style="-fx-font-weight: bold; -fx-min-width: 30;"/>
                        <Label text="09:00 - 18:00" style="-fx-text-fill: #27ae60;"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
        
        <!-- 오른쪽 컬럼 -->
        <VBox spacing="20" HBox.hgrow="ALWAYS">
            <!-- 근무 상태 -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="근무 상태" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20 0;">
                    <Label text="🟢" style="-fx-font-size: 48px;"/>
                    <Label text="근무중" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                    <Label text="현재 근무 시간: 6시간 30분" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
                </VBox>
            </VBox>
            
            <!-- 휴가 신청 -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="휴가 신청" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <Button text="연차 신청" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
                    <Button text="반차 신청" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
                    <Button text="병가 신청" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
                </VBox>
            </VBox>
        </VBox>
    </HBox>
</VBox> 