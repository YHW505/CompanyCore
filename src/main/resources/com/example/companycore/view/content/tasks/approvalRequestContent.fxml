<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.companycore.controller.tasks.ApprovalRequestController">

    <!-- 상단 헤더 -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 50 0 15 0; -fx-max-width: 1000;">
        <Label prefWidth="120.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="내 결재 요청" />
        <Region HBox.hgrow="ALWAYS" />

        <!-- 검색용 ComboBox -->
        <ComboBox fx:id="searchComboBox" prefWidth="100" promptText="컬럼 선택" style="-fx-background-radius: 20; -fx-border-color: black; -fx-border-width: 1; -fx-border-radius: 20; -fx-padding: 3 10;">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="전체" />
                    <String fx:value="제목" />
                    <String fx:value="부서" />
                    <String fx:value="작성자" />
                </FXCollections>
            </items>
        </ComboBox>

        <TextField fx:id="searchField" prefWidth="200" promptText="검색" style="-fx-background-radius: 20; -fx-background-color: #f3f5fa; -fx-border-color: black; -fx-border-width: 1; -fx-border-radius: 20; -fx-padding: 6 15;" />

        <Button onAction="#handleSearch" style="-fx-background-color: #5932EA; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;" text="검색" />
    </HBox>

    <!-- 테이블 -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-max-width: 1000;">
        <TableView fx:id="approvalRequestTable" prefHeight="437.0" prefWidth="842.0" style="-fx-background-color: transparent;">
            <!-- 데이터 없을 때 메시지 -->
            <placeholder>
                <Label style="-fx-text-fill: #999; -fx-font-size: 14px; -fx-padding: 20;" text="데이터가 없습니다." />
            </placeholder>
            <columns>
                <TableColumn fx:id="colNumber" prefWidth="100" text="순서" />
                <TableColumn fx:id="colTitle" prefWidth="200" text="제목" />
                <TableColumn fx:id="colDepartment" prefWidth="120" text="부서" />
                <TableColumn fx:id="colAuthor" prefWidth="120" text="작성자" />
                <TableColumn fx:id="colDate" prefWidth="140" text="일자" />
                <TableColumn fx:id="colStatus" prefWidth="160" text="상태" />
            </columns>
        </TableView>
    </VBox>

    <!-- 버튼 영역 -->
    <HBox spacing="20" alignment="CENTER_RIGHT" style="-fx-padding: 15 0;">
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="deleteBtn" mnemonicParsing="false" text="삭제"
                style="-fx-background-color: #444951; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;"
                onAction="#handleDelete"/>
        <Button fx:id="requestButton" mnemonicParsing="false" text="결재 요청"
                style="-fx-background-color: #5932EA; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;"
                onAction="#handleNewRequest"/>
        <Region prefWidth="20" />
    </HBox>

    <!-- 페이지네이션 -->
    <HBox spacing="20" alignment="CENTER" style="-fx-padding: 15 0;">
        <Region HBox.hgrow="ALWAYS" />
        <Pagination fx:id="pagination" prefHeight="45.0" prefWidth="600.0"
                    style="-fx-page-information-visible: false; -fx-arrows-visible: true; -fx-background-color: transparent;">
            <stylesheets>
                <URL value="@../common/pagination.css" />
            </stylesheets>
        </Pagination>
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- 푸터 -->
    <HBox alignment="CENTER_LEFT" style="-fx-padding: 15 0 0 0;">
        <Label style="-fx-text-fill: #6c757d; -fx-font-size: 12px;" text="© Company Core" />
    </HBox>
</VBox>