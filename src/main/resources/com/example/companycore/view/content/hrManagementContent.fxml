<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="15" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.companycore.controller.HRManagementController">

    <!-- 상단 헤더 -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 50 0 15 0; -fx-max-width: 1000;">
        <Label prefWidth="120.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="사원목록" />
        <Region HBox.hgrow="ALWAYS" />

        <!-- 검색용 ComboBox -->
        <ComboBox fx:id="searchConditionComboBox" prefWidth="100" promptText="컬럼 선택" style="-fx-background-radius: 20; -fx-border-color: black; -fx-border-width: 1; -fx-border-radius: 20; -fx-padding: 3 10;" />

        <TextField fx:id="searchTextField" prefWidth="200" promptText="검색" style="-fx-background-radius: 20; -fx-background-color: #f3f5fa; -fx-border-color: black; -fx-border-width: 1; -fx-border-radius: 20; -fx-padding: 6 15;" />

        <Button fx:id="searchButton" onAction="#handleSearch" style="-fx-background-color: #5932EA; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;" text="검색" />
    </HBox>
    
    <!-- 테이블 -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-max-width: 1000;">
        <TableView fx:id="employeeTable" prefHeight="437.0" prefWidth="842.0" style="-fx-background-color: transparent; -fx-table-cell-border-color: transparent;">
            <!-- 데이터 없을 때 메시지 -->
            <placeholder>
                <Label style="-fx-text-fill: #999; -fx-font-size: 14px; -fx-padding: 20;" text="데이터가 없습니다." />
            </placeholder>
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100" text="순서" />
                <TableColumn fx:id="nameColumn" prefWidth="200" text="사원이름" />
                <TableColumn fx:id="departmentColumn" prefWidth="120" text="부서" />
                <TableColumn fx:id="employeeIdColumn" prefWidth="120" text="사번" />
                <TableColumn fx:id="emailColumn" prefWidth="140" text="Email" />
                <TableColumn fx:id="editColumn" prefWidth="160" text="수정" />
            </columns>
        </TableView>
    </VBox>
    
    <!-- 버튼 영역 (페이지네이션 위) -->
    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15 0 0 0; -fx-max-width: 1000;">
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="deleteButton" text="삭제" 
                style="-fx-background-color: #444951; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;"/>
        <Button fx:id="registerButton" text="사원 등록" 
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;"/>
    </HBox>
    
    <!-- 페이지네이션 -->
    <HBox alignment="CENTER" prefHeight="75.0" prefWidth="594.0" spacing="10" style="-fx-padding: 15 0;">
        <Pagination fx:id="pagination" style="-fx-page-information-visible: false; -fx-arrows-visible: true;">
            <stylesheets>
                <URL value="@pagination.css" />
            </stylesheets>
        </Pagination>
    </HBox>
    
    <!-- 푸터 -->
    <HBox alignment="CENTER_LEFT" style="-fx-padding: 15 0 0 0;">
        <Label style="-fx-text-fill: #6c757d; -fx-font-size: 12px;" text="© Company Core" />
    </HBox>
    
</VBox> 