<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="550.0" prefWidth="600.0" spacing="15" style="-fx-padding: 20;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.companycore.controller.tasks.NoticeEditController">

    <!-- 부서 -->
    <VBox spacing="5">
        <Label text="부서 *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <ComboBox fx:id="departmentComboBox" promptText="부서를 선택하세요" 
                   style="-fx-font-size: 14px; -fx-padding: 8;"/>
    </VBox>

    <!-- 작성자 -->
    <VBox spacing="5">
        <Label text="작성자 *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <TextField fx:id="authorTextField" promptText="작성자 이름을 입력하세요" 
                   style="-fx-font-size: 14px; -fx-padding: 8;"/>
    </VBox>

    <!-- 제목 -->
    <VBox spacing="5">
        <Label text="제목 *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <TextField fx:id="titleTextField" promptText="공지사항 제목을 입력하세요" 
                   style="-fx-font-size: 14px; -fx-padding: 8;"/>
    </VBox>

    <!-- 내용 -->
    <VBox spacing="5" VBox.vgrow="ALWAYS">
        <Label text="내용 *" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <TextArea fx:id="contentTextArea" promptText="공지사항 내용을 입력하세요" 
                  wrapText="true" style="-fx-font-size: 14px; -fx-padding: 8;" VBox.vgrow="ALWAYS"/>
    </VBox>

    <!-- 첨부파일 -->
    <VBox spacing="5">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="첨부파일" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="addFileButton" text="파일 추가" 
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 5 10;"
                    onAction="#handleAddFile"/>
            <Button fx:id="removeFileButton" text="선택 삭제" 
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 5 10;"
                    onAction="#handleRemoveFile"/>
        </HBox>
        <ListView fx:id="fileListView" prefHeight="80" 
                  style="-fx-border-color: #bdc3c7; -fx-border-radius: 3; -fx-background-radius: 3;"/>
    </VBox>

    <!-- 버튼 -->
    <ButtonBar>
        <buttons>
            <Button fx:id="saveButton" text="저장" 
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;"
                    onAction="#handleSave"/>
            <Button fx:id="cancelButton" text="취소" 
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;"
                    onAction="#handleCancel"/>
        </buttons>
    </ButtonBar>

</VBox> 