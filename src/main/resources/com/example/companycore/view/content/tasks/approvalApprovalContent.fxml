<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.companycore.controller.ApprovalController">

    <!-- 상단 헤더 -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 15 0; -fx-max-width: 1000;">
        <Label prefWidth="120.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="결재 승인" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="deleteBtn" onAction="#handleDelete" style="-fx-background-color: #444951; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;" text="삭제" />
        <TextField fx:id="searchField" prefWidth="200" promptText="검색" style="-fx-background-radius: 20; -fx-background-color: #f3f5fa; -fx-border-color: transparent; -fx-padding: 6 15;" />
        <Button onAction="#handleSearch" style="-fx-background-color: #5932EA; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;" text="검색" />
    </HBox>

    <!-- 테이블 -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-max-width: 1000;">
        <TableView fx:id="approvalTable" prefHeight="437.0" prefWidth="842.0" style="-fx-background-color: transparent;">
            <!-- 데이터 없을 때 메시지 -->
            <placeholder>
                <Label style="-fx-text-fill: #999; -fx-font-size: 14px; -fx-padding: 20;" text="데이터가 없습니다." />
            </placeholder>
            <columns>
                <!-- 순서 컬럼 -->
                <TableColumn fx:id="colNumber" prefWidth="100" text="순서" />
                <TableColumn fx:id="colTitle" prefWidth="200" text="제목" />
                <TableColumn fx:id="colDepartment" prefWidth="120" text="부서" />
                <TableColumn fx:id="colAuthor" prefWidth="120" text="작성자" />
                <TableColumn fx:id="colDate" prefWidth="140" text="일자" />
                <TableColumn fx:id="colAction" prefWidth="160" text="거부/승인" />
            </columns>
        </TableView>
    </VBox>

    <!-- 페이지네이션 -->
    <HBox alignment="CENTER" prefHeight="75.0" prefWidth="594.0" spacing="10" style="-fx-padding: 15 0;">
        <Pagination fx:id="pagination" style="-fx-page-information-visible: false; -fx-arrows-visible: true;">
            <stylesheets>
                <URL value="@pagination.css" />
            </stylesheets>
        </Pagination>
    </HBox>

    <!-- 푸터 -->
    <HBox alignment="CENTER_LEFT" style="-fx-padding: 15 0 0 0;">
        <Label style="-fx-text-fill: #6c757d; -fx-font-size: 12px;" text="© Company Core" />
    </HBox>
</VBox>
