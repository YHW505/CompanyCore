<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="700.0" spacing="15" style="-fx-padding: 20;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.companycore.controller.tasks.NoticeDetailController">

    <!-- 헤더 -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="공지" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="importantLabel" text="중요" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 4 8; -fx-background-radius: 4;" visible="false"/>
    </HBox>

    <!-- 제목 -->
    <VBox spacing="5">
        <Label text="제목" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label fx:id="titleLabel" style="-fx-font-size: 16px; -fx-padding: 8; -fx-background-color: #f8f9fa; -fx-background-radius: 4;"/>
    </VBox>

    <!-- 정보 행 -->
    <HBox spacing="20">
        <!-- 부서 -->
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="부서" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="departmentLabel" style="-fx-padding: 8; -fx-background-color: #f8f9fa; -fx-background-radius: 4;"/>
        </VBox>
        
        <!-- 작성자 -->
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="작성자" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="authorLabel" style="-fx-padding: 8; -fx-background-color: #f8f9fa; -fx-background-radius: 4;"/>
        </VBox>
        
        <!-- 작성일 -->
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="작성일" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="dateLabel" style="-fx-padding: 8; -fx-background-color: #f8f9fa; -fx-background-radius: 4;"/>
        </VBox>
    </HBox>

    <!-- 내용 -->
    <VBox spacing="5" VBox.vgrow="ALWAYS">
        <Label text="내용" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <TextArea fx:id="contentTextArea" editable="false" wrapText="true" 
                      style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-color: #f8f9fa; -fx-background-radius: 4; -fx-border-color: #dee2e6; -fx-border-radius: 4;" VBox.vgrow="ALWAYS"/>
        </ScrollPane>
    </VBox>

    <!-- 첨부파일 -->
    <VBox spacing="5" visible="false" fx:id="attachmentSection">
        <Label text="첨부파일" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <ListView fx:id="attachmentListView" prefHeight="100" 
                  style="-fx-border-color: #dee2e6; -fx-border-radius: 4; -fx-background-radius: 4;"/>
    </VBox>

    <!-- 버튼 -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="downloadButton" text="첨부파일 다운로드" 
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;"
                onAction="#handleDownloadAttachment" visible="false"/>
        <Button fx:id="closeButton" text="확인" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;"
                onAction="#handleClose"/>
    </HBox>

</VBox> 