<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-padding: 20;" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.companycore.controller.mail.DynamicMailPreviewController">
    
    <!-- 메일 헤더 -->
    <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5;">
        <HBox spacing="20">
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: #6c757d;" text="보낸 사람:" />
                <Label fx:id="senderLabel" style="-fx-font-size: 14px;" text="발신자" />
            </VBox>
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: #6c757d;" text="받는 사람:" />
                <Label fx:id="recipientLabel" style="-fx-font-size: 14px;" text="수신자" />
            </VBox>
        </HBox>
        
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: #6c757d;" text="제목:" />
            <Label fx:id="subjectLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="메일 제목" />
        </VBox>
        
        <HBox spacing="20">
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: #6c757d;" text="날짜:" />
                <Label fx:id="dateLabel" prefHeight="18.0" prefWidth="104.0" style="-fx-font-size: 14px;" text="날짜" />
            </VBox>
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: #6c757d;" text="첨부파일:" />
                <Label fx:id="attachmentLabel" style="-fx-font-size: 14px;" text="첨부파일 없음" />
            </VBox>
        </HBox>
    </VBox>
    
    <!-- 메일 내용 -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="내용:" />
        <TextArea fx:id="contentTextArea" editable="false" style="-fx-background-color: white; -fx-border-color: #e9ecef; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 10;" wrapText="true" VBox.vgrow="ALWAYS" />
    </VBox>
    
    <!-- 하단 버튼들 -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="답장" />
        <Button style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="전달" />
        <Button style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" text="삭제" />
    </HBox>
</VBox>
