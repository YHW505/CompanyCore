<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.companycore.controller.mail.DynamicMailPreviewController"
      spacing="20" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">
    
    <!-- 메일 헤더 -->
    <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5;">
        <HBox spacing="20">
            <VBox spacing="5">
                <Label text="보낸 사람:" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                <Label fx:id="senderLabel" text="발신자" style="-fx-font-size: 14px;"/>
            </VBox>
            <VBox spacing="5">
                <Label text="받는 사람:" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                <Label fx:id="recipientLabel" text="수신자" style="-fx-font-size: 14px;"/>
            </VBox>
        </HBox>
        
        <VBox spacing="5">
            <Label text="제목:" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
            <Label fx:id="subjectLabel" text="메일 제목" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        </VBox>
        
        <HBox spacing="20">
            <VBox spacing="5">
                <Label text="날짜:" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                <Label fx:id="dateLabel" text="날짜" style="-fx-font-size: 14px;"/>
            </VBox>
            <VBox spacing="5">
                <Label text="첨부파일:" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-text-fill: #6c757d;"/>
                <Label fx:id="attachmentLabel" text="첨부파일 없음" style="-fx-font-size: 14px;"/>
            </VBox>
        </HBox>
    </VBox>
    
    <!-- 메일 내용 -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="내용:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <TextArea fx:id="contentTextArea" 
                  style="-fx-background-color: white; -fx-border-color: #e9ecef; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 10;"
                  VBox.vgrow="ALWAYS"
                  editable="false"
                  wrapText="true"/>
    </VBox>
    
    <!-- 하단 버튼들 -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="답장" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;"/>
        <Button text="전달" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;"/>
        <Button text="삭제" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;"/>
    </HBox>
</VBox> 