                </HBox>
                
                <!-- 메일 리스트 -->
                <VBox fx:id="mailListContainer" spacing="5" VBox.vgrow="ALWAYS">
                    <!-- 보낸 메일 1 -->
                    <HBox fx:id="mailRow1" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <CheckBox fx:id="checkBox1" style="-fx-min-width: 20;" visible="false" />
                        <VBox HBox.hgrow="ALWAYS">
                            <Label fx:id="mailTitle1" onMouseClicked="#handleMailPreview1" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="" />
                        </VBox>
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" text="" />
