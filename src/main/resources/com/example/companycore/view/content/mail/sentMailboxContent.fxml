    <!-- 상단 헤더 -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #6c5ce7; -fx-padding: 15 20; -fx-background-radius: 10;">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="Company Core mail" />
        <Region HBox.hgrow="ALWAYS" />
    </HBox>
    
    <!-- 메인 콘텐츠 -->
