<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.companycore.controller.calendar.CalendarController"
      spacing="20" style="-fx-padding: 20;">
    <!-- 상단 헤더 -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 20 0;">
        <Label text="캘린더" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>
    
    <!-- 메인 콘텐츠 -->
    <HBox spacing="20">
        <!-- 좌측 - 주간 시간표 (테이블 스타일) -->
        <VBox spacing="20" HBox.hgrow="ALWAYS">
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
                <Label text="주간 일정" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 15 0;"/>
                
                <!-- 테이블 스타일 시간표 -->
                <TableView fx:id="scheduleTable">
                    <columns>
                        <TableColumn text="시간" fx:id="timeColumn"/>
                        <TableColumn text="월요일" fx:id="mondayColumn"/>
                        <TableColumn text="화요일" fx:id="tuesdayColumn"/>
                        <TableColumn text="수요일" fx:id="wednesdayColumn"/>
                        <TableColumn text="목요일" fx:id="thursdayColumn"/>
                        <TableColumn text="금요일" fx:id="fridayColumn"/>
                        <TableColumn text="토요일" fx:id="saturdayColumn"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
        
        <!-- 우측 - 실제 달력 -->
        <VBox spacing="20" HBox.hgrow="NEVER" style="-fx-min-width: 280;">
            <!-- 미니 달력 -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 15 0;">
                    <Label fx:id="calendarTitle" text="August 2025" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="prevMonthButton" text="◀" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 8;" onAction="#handlePrevMonth"/>
                    <Button fx:id="nextMonthButton" text="▶" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 8;" onAction="#handleNextMonth"/>
                </HBox>
                
                <!-- 요일 헤더 -->
                <GridPane fx:id="calendarGrid" hgap="2" vgap="2">
                    <Label text="Mo" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-padding: 5; -fx-alignment: center;"/>
                    <Label text="Tu" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-padding: 5; -fx-alignment: center;"/>
                    <Label text="We" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-padding: 5; -fx-alignment: center;"/>
                    <Label text="Th" GridPane.columnIndex="3" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-padding: 5; -fx-alignment: center;"/>
                    <Label text="Fr" GridPane.columnIndex="4" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-padding: 5; -fx-alignment: center;"/>
                    <Label text="Sa" GridPane.columnIndex="5" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-padding: 5; -fx-alignment: center;"/>
                    <Label text="Su" GridPane.columnIndex="6" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-padding: 5; -fx-alignment: center;"/>
                    
                    <!-- 날짜들은 동적으로 생성됨 -->
                </GridPane>
            </VBox>
            
            <!-- 다가오는 일정 -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="다가오는 일정" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 15 0;"/>
                
                <VBox fx:id="upcomingSchedulesContainer" spacing="10">
                    <!-- 동적으로 생성되는 다가오는 일정들 -->
                </VBox>
            </VBox>
        </VBox>
    </HBox>
    
    <!-- 하단 - 회의록 기능 -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="회의록 가져오기" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 15 0;"/>
        
        <VBox fx:id="meetingNotesContainer" spacing="20">
            <!-- 동적으로 생성되는 회의록 항목들 -->
        </VBox>
    </VBox>
</VBox> 