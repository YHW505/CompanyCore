<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.companycore.controller.mail.MailController"
      spacing="20" style="-fx-padding: 20;" VBox.vgrow="ALWAYS">
    
    <!-- 상단 헤더 -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #6c5ce7; -fx-padding: 15 20; -fx-background-radius: 10;">
        <Label text="Company Core mail" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    </HBox>

    <!-- 메인 콘텐츠 -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- 왼쪽 컬럼 - 메일 목록 -->
        <VBox spacing="15" style="-fx-min-width: 400; -fx-pref-width: 400;">
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">

                <!-- 검색바 -->
                <HBox spacing="10" style="-fx-padding: 0 0 15 0;">
                    <Label text="🔍" style="-fx-font-size: 16px;"/>
                    <TextField promptText="발신자 검색" style="-fx-background-color: #f8f9fa; -fx-background-radius: 5; -fx-padding: 8 12; -fx-border-radius: 5; -fx-border-color: #e9ecef; -fx-border-width: 1;" HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- 메일 리스트 -->
                <VBox fx:id="mailListContainer" spacing="5" VBox.vgrow="ALWAYS">
                    <!-- 메일 1 -->
                    <HBox fx:id="mailRow1" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <CheckBox fx:id="checkBox1" style="-fx-min-width: 20;" visible="false"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label fx:id="mailTitle1" text="" style="-fx-font-weight: bold; -fx-font-size: 14px;" onMouseClicked="#handleMailPreview1"/>
                        </VBox>
                        <Label text="" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                        <Label text="" style="-fx-font-size: 12px;"/>
                    </HBox>

                    <!-- 메일 2 -->
                    <HBox fx:id="mailRow2" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <CheckBox fx:id="checkBox2" style="-fx-min-width: 20;" visible="false"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label fx:id="mailTitle2" text="" style="-fx-font-weight: bold; -fx-font-size: 14px;" onMouseClicked="#handleMailPreview2"/>
                        </VBox>
                        <Label text="" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>

                    <!-- 메일 3 -->
                    <HBox fx:id="mailRow3" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <CheckBox fx:id="checkBox3" style="-fx-min-width: 20;" visible="false"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label fx:id="mailTitle3" text="" style="-fx-font-weight: bold; -fx-font-size: 14px;" onMouseClicked="#handleMailPreview3"/>
                        </VBox>
                        <Label text="" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>

                    <!-- 메일 4 -->
                    <HBox fx:id="mailRow4" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <CheckBox fx:id="checkBox4" style="-fx-min-width: 20;" visible="false"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label fx:id="mailTitle4" text="" style="-fx-font-weight: bold; -fx-font-size: 14px;" onMouseClicked="#handleMailPreview4"/>
                        </VBox>
                        <Label text="" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>

                    <!-- 메일 5 -->
                    <HBox fx:id="mailRow5" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <CheckBox fx:id="checkBox5" style="-fx-min-width: 20;" visible="false"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label fx:id="mailTitle5" text="" style="-fx-font-weight: bold; -fx-font-size: 14px;" onMouseClicked="#handleMailPreview5"/>
                        </VBox>
                        <Label text="" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>

                    <!-- 메일 6 -->
                    <HBox fx:id="mailRow6" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <CheckBox fx:id="checkBox6" style="-fx-min-width: 20;" visible="false"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label fx:id="mailTitle6" text="" style="-fx-font-weight: bold; -fx-font-size: 14px;" onMouseClicked="#handleMailPreview6"/>
                        </VBox>
                        <Label text="" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>

                    <!-- 메일 7 -->
                    <HBox fx:id="mailRow7" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <CheckBox fx:id="checkBox7" style="-fx-min-width: 20;" visible="false"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label fx:id="mailTitle7" text="" style="-fx-font-weight: bold; -fx-font-size: 14px;" onMouseClicked="#handleMailPreview7"/>
                        </VBox>
                        <Label text="" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>

                    <!-- 메일 8 -->
                    <HBox fx:id="mailRow8" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <CheckBox fx:id="checkBox8" style="-fx-min-width: 20;" visible="false"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label fx:id="mailTitle8" text="" style="-fx-font-weight: bold; -fx-font-size: 14px;" onMouseClicked="#handleMailPreview8"/>
                        </VBox>
                        <Label text="" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>

                    <!-- 메일 9 -->
                    <HBox fx:id="mailRow9" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <CheckBox fx:id="checkBox9" style="-fx-min-width: 20;" visible="false"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label fx:id="mailTitle9" text="" style="-fx-font-weight: bold; -fx-font-size: 14px;" onMouseClicked="#handleMailPreview9"/>
                        </VBox>
                        <Label text="" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>

                    <!-- 메일 10 -->
                    <HBox fx:id="mailRow10" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <CheckBox fx:id="checkBox10" style="-fx-min-width: 20;" visible="false"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label fx:id="mailTitle10" text="" style="-fx-font-weight: bold; -fx-font-size: 14px;" onMouseClicked="#handleMailPreview10"/>
                        </VBox>
                        <Label text="" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                </VBox>

                <!-- 하단 버튼들과 페이지네이션 -->
                <VBox spacing="10" style="-fx-padding: 15 0 0 0;">
                    <!-- 페이지네이션 -->
                    <HBox alignment="CENTER" spacing="10">
                        <Button fx:id="prevPageButton" text="◀ 이전" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 10; -fx-cursor: hand; -fx-background-radius: 3;" onAction="#handlePrevPage"/>
                        <Label fx:id="pageInfoLabel" text="1 / 1" style="-fx-font-weight: bold; -fx-text-fill: #6c757d;"/>
                        <Button fx:id="nextPageButton" text="다음 ▶" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 10; -fx-cursor: hand; -fx-background-radius: 3;" onAction="#handleNextPage"/>
                    </HBox>

                    <!-- 버튼들 -->
                    <HBox spacing="10">
                        <Button text="🗑️ 지우기" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;"/>
                        <Button text="✉️ 메일쓰기" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-cursor: hand; -fx-background-radius: 5;" onAction="#handleComposeMail"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
        
        <!-- 오른쪽 컬럼 - 동적 패널 -->
        <VBox spacing="15" HBox.hgrow="ALWAYS">
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
                
                <!-- 동적 컨테이너 -->
                <StackPane fx:id="rightContentContainer" VBox.vgrow="ALWAYS">
                    <!-- 기본 메시지 -->
                    <VBox alignment="CENTER" spacing="20">
                        <Label text="📧" style="-fx-font-size: 48px;"/>
                        <Label text="메일을 선택하거나 새 메일을 작성하세요" style="-fx-font-size: 16px; -fx-text-fill: #6c757d;"/>
                    </VBox>
                </StackPane>
                
            </VBox>
        </VBox>
    </HBox>
</VBox> 