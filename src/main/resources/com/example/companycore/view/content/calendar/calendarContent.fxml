<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.companycore.controller.calendar.CalendarController"
      spacing="15" style="-fx-padding: 15;">
    <!-- 상단 헤더 -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 15 0;">
        <Label text="캘린더" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>
    
    <!-- 메인 콘텐츠 -->
    <HBox spacing="15" VBox.vgrow="ALWAYS">
        <!-- 좌측 - 달력 (메인 콘텐츠) -->
        <VBox spacing="15" HBox.hgrow="ALWAYS">
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 15 0;">
                    <Label fx:id="calendarTitle" text="August 2025" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="prevMonthButton" text="◀" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 12;" onAction="#handlePrevMonth"/>
                    <Button fx:id="nextMonthButton" text="▶" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 12;" onAction="#handleNextMonth"/>
                </HBox>
                
                <!-- 요일 헤더 -->
                <GridPane fx:id="calendarGrid" hgap="3" vgap="3" style="-fx-padding: 10;">
                    <Label text="월" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8; -fx-alignment: center; -fx-background-color: #f8f9fa; -fx-background-radius: 5;"/>
                    <Label text="화" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8; -fx-alignment: center; -fx-background-color: #f8f9fa; -fx-background-radius: 5;"/>
                    <Label text="수" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8; -fx-alignment: center; -fx-background-color: #f8f9fa; -fx-background-radius: 5;"/>
                    <Label text="목" GridPane.columnIndex="3" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8; -fx-alignment: center; -fx-background-color: #f8f9fa; -fx-background-radius: 5;"/>
                    <Label text="금" GridPane.columnIndex="4" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8; -fx-alignment: center; -fx-background-color: #f8f9fa; -fx-background-radius: 5;"/>
                    <Label text="토" GridPane.columnIndex="5" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8; -fx-alignment: center; -fx-background-color: #f8f9fa; -fx-background-radius: 5;"/>
                    <Label text="일" GridPane.columnIndex="6" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 8; -fx-alignment: center; -fx-background-color: #f8f9fa; -fx-background-radius: 5;"/>
                    
                    <!-- 날짜들은 동적으로 생성됨 -->
                </GridPane>
                
                <!-- 선택된 날짜 정보 -->
                <VBox fx:id="selectedDateInfo" spacing="5" style="-fx-padding: 10; -fx-background-color: #ecf0f1; -fx-background-radius: 5; -fx-margin: 10 0 0 0;" visible="false">
                    <Label fx:id="selectedDateLabel" text="선택된 날짜: 2025년 8월 4일" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #2c3e50;"/>
                    <Label fx:id="selectedDateScheduleCount" text="일정: 0개" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                </VBox>
            </VBox>
        </VBox>
        
        <!-- 우측 - 다가오는 일정 -->
        <VBox spacing="15" HBox.hgrow="NEVER" style="-fx-min-width: 280;">
            <!-- 다가오는 일정 -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 15 0;">
                    <Label text="다가오는 일정" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="refreshUpcomingButton" text="새로고침" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 10;" onAction="#handleRefreshUpcoming"/>
                </HBox>
                
                <VBox fx:id="upcomingSchedulesContainer" spacing="10">
                    <!-- 동적으로 생성되는 다가오는 일정들 -->
                </VBox>
            </VBox>
        </VBox>
    </HBox>
    
    <!-- 하단 - 회의록 -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-min-height: 200;">
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 15 0;">
            <Label text="최신 회의록" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="refreshMeetingsButton" text="새로고침" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;" onAction="#handleRefreshMeetings"/>
        </HBox>
        
        <HBox spacing="20">
            <VBox fx:id="meetingNotesContainer" spacing="15" HBox.hgrow="ALWAYS">
                <!-- 동적으로 생성되는 회의록 항목들 -->
            </VBox>
        </HBox>
    </VBox>
</VBox> 