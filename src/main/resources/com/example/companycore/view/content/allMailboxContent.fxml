<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      spacing="20" style="-fx-padding: 20;">
    <!-- 상단 헤더 -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="전체 메일함" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>
    
    <!-- 메인 콘텐츠 -->
    <HBox spacing="20">
        <!-- 왼쪽 컬럼 - 메일 목록 -->
        <VBox spacing="10" style="-fx-min-width: 300; -fx-pref-width: 300;">
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="메일함" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <!-- 메일 1 -->
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <Label text="📧" style="-fx-font-size: 16px;"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label text="회의 일정 변경 안내" style="-fx-font-weight: bold;"/>
                            <Label text="관리자" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                        </VBox>
                        <Label text="14:30" style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                    
                    <!-- 메일 2 -->
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <Label text="📧" style="-fx-font-size: 16px;"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label text="급여 관련 공지사항" style="-fx-font-weight: bold;"/>
                            <Label text="인사팀" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                        </VBox>
                        <Label text="12:15" style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                    
                    <!-- 메일 3 -->
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;">
                        <Label text="📧" style="-fx-font-size: 16px;"/>
                        <VBox HBox.hgrow="ALWAYS">
                            <Label text="새로운 프로젝트 안내" style="-fx-font-weight: bold;"/>
                            <Label text="마케팅팀" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;"/>
                        </VBox>
                        <Label text="09:45" style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
        
        <!-- 오른쪽 컬럼 - 메일 내용 -->
        <VBox spacing="10" HBox.hgrow="ALWAYS">
            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 20 0;">
                    <Label text="📧" style="-fx-font-size: 16px;"/>
                    <Label text="회의 일정 변경 안내" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                </HBox>
                
                <!-- 메일 정보 -->
                <VBox spacing="5" style="-fx-padding: 0 0 20 0; -fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5;">
                    <HBox spacing="10">
                        <Label text="보낸사람:" style="-fx-font-weight: bold;"/>
                        <Label text="관리자" style="-fx-text-fill: #2c3e50;"/>
                    </HBox>
                    <HBox spacing="10">
                        <Label text="받은시간:" style="-fx-font-weight: bold;"/>
                        <Label text="2024-01-15 14:30" style="-fx-text-fill: #2c3e50;"/>
                    </HBox>
                </VBox>
                
                <!-- 메일 내용 -->
                <VBox spacing="10" style="-fx-pref-height: 300; -fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5;">
                    <Label text="안녕하세요," style="-fx-font-size: 14px;"/>
                    <Label text="오늘 오후 3시로 예정된 회의가 2시로 변경되었습니다." style="-fx-font-size: 14px;"/>
                    <Label text="참석하시는 분들은 시간을 확인해 주시기 바랍니다." style="-fx-font-size: 14px;"/>
                    <Label text="감사합니다." style="-fx-font-size: 14px;"/>
                </VBox>
                
                <!-- 메일 액션 버튼 -->
                <HBox spacing="10" style="-fx-padding: 15 0 0 0;">
                    <Button text="답장" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
                    <Button text="전달" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
                    <Button text="삭제" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"/>
                </HBox>
            </VBox>
        </VBox>
    </HBox>
</VBox> 