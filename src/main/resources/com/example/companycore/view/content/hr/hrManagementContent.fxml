<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<?import java.net.URL?>

<VBox prefHeight="785.0" prefWidth="819.0" spacing="20" style="-fx-padding: 20;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.companycore.controller.hr.HRManagementController">

    <!-- 상단 헤더 -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="인사관리" />
    </HBox>

    <!-- 메인 콘텐츠 -->
    <VBox prefHeight="635.0" prefWidth="779.0" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

        <!-- 검색 및 필터 영역 -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Region HBox.hgrow="ALWAYS" />
            <ComboBox fx:id="searchConditionComboBox" prefWidth="100" />
            <TextField fx:id="searchTextField" promptText="검색어를 입력하세요" prefWidth="200" />
            <Button fx:id="searchButton" text="검색" 
                    style="-fx-background-color: #5932EA; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;" />
        </HBox>

        <!-- 테이블 -->
        <TableView fx:id="employeeTable" prefHeight="437.0" prefWidth="739.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="60.0" text="번호" />
                <TableColumn fx:id="nameColumn" prefWidth="100.0" text="이름" />
                <TableColumn fx:id="employeeIdColumn" prefWidth="80.0" text="사번" />
                <TableColumn fx:id="departmentColumn" prefWidth="100.0" text="부서" />
                <TableColumn fx:id="positionColumn" prefWidth="80.0" text="직급" />
                <TableColumn fx:id="emailColumn" prefWidth="150.0" text="이메일" />
                <TableColumn fx:id="phoneColumn" prefWidth="100.0" text="연락처" />
                <TableColumn fx:id="addressColumn" prefWidth="120.0" text="주소" />
                <TableColumn fx:id="editColumn" prefWidth="80.0" text="관리" />
            </columns>
        </TableView>

        <ButtonBar prefHeight="40.0" prefWidth="200.0">
            <buttons>
                <Button fx:id="deleteButton" mnemonicParsing="false" text="삭제"
                        style="-fx-background-color: #444951; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;" />
                <Button fx:id="registerButton" mnemonicParsing="false" text="사원 등록"
                        style="-fx-background-color: #5932EA; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;" />
            </buttons>
        </ButtonBar>

        <Pagination fx:id="pagination" prefHeight="45.0" prefWidth="746.0"
                    style="-fx-page-information-visible: false; -fx-arrows-visible: true;">
            <stylesheets>
                <URL value="@../common/pagination.css" />
            </stylesheets>
        </Pagination>

        <Label style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;" />

    </VBox>

</VBox> 