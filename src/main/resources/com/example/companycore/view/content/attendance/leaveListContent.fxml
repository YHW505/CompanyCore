<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.companycore.controller.attendance.LeaveListController" spacing="20" styleClass="content-container">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- 헤더 섹션 -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="내 휴가신청 목록" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="새 휴가신청" styleClass="primary-button" onAction="#handleNewLeaveRequest"/>
        <Button text="새로고침" styleClass="secondary-button" onAction="#handleRefresh"/>
    </HBox>

    <!-- 검색 및 필터 섹션 -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="상태:" styleClass="filter-label"/>
        <ComboBox fx:id="statusFilterComboBox" promptText="전체" styleClass="filter-combo"/>
        
        <Label text="휴가종류:" styleClass="filter-label"/>
        <ComboBox fx:id="typeFilterComboBox" promptText="전체" styleClass="filter-combo"/>
        
        <Label text="기간:" styleClass="filter-label"/>
        <DatePicker fx:id="startDateFilter" promptText="시작일" styleClass="filter-date"/>
        <Label text="~" styleClass="filter-label"/>
        <DatePicker fx:id="endDateFilter" promptText="종료일" styleClass="filter-date"/>
        
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="검색" styleClass="search-button" onAction="#handleSearch"/>
        <Button text="초기화" styleClass="reset-button" onAction="#handleReset"/>
    </HBox>

    <!-- 테이블 헤더 -->
    <HBox styleClass="table-header" alignment="CENTER_LEFT">
        <VBox styleClass="header-cell" minWidth="80" prefWidth="80" alignment="CENTER">
            <Label text="번호" styleClass="header-label"/>
        </VBox>
        <VBox styleClass="header-cell" minWidth="120" prefWidth="120" alignment="CENTER">
            <Label text="휴가종류" styleClass="header-label"/>
        </VBox>
        <VBox styleClass="header-cell" minWidth="100" prefWidth="100" alignment="CENTER">
            <Label text="시작일" styleClass="header-label"/>
        </VBox>
        <VBox styleClass="header-cell" minWidth="100" prefWidth="100" alignment="CENTER">
            <Label text="종료일" styleClass="header-label"/>
        </VBox>
        <VBox styleClass="header-cell" minWidth="80" prefWidth="80" alignment="CENTER">
            <Label text="일수" styleClass="header-label"/>
        </VBox>
        <VBox styleClass="header-cell" minWidth="120" prefWidth="120" alignment="CENTER">
            <Label text="상태" styleClass="header-label"/>
        </VBox>
        <VBox styleClass="header-cell" minWidth="200" prefWidth="200" alignment="CENTER">
            <Label text="사유" styleClass="header-label"/>
        </VBox>
        <VBox styleClass="header-cell" minWidth="120" prefWidth="120" alignment="CENTER">
            <Label text="신청일" styleClass="header-label"/>
        </VBox>
        <VBox styleClass="header-cell" minWidth="150" prefWidth="150" alignment="CENTER">
            <Label text="액션" styleClass="header-label"/>
        </VBox>
    </HBox>

    <!-- 테이블 데이터 -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="table-scroll-pane">
        <VBox fx:id="tableData" spacing="0" styleClass="table-data"/>
    </ScrollPane>

    <!-- 페이지네이션 -->
    <HBox alignment="CENTER" spacing="10" styleClass="pagination-container">
        <Button fx:id="prevButton" text="이전" styleClass="pagination-button"/>
        <Button fx:id="page1Button" text="1" styleClass="pagination-button"/>
        <Button fx:id="page2Button" text="2" styleClass="pagination-button"/>
        <Button fx:id="page3Button" text="3" styleClass="pagination-button"/>
        <Button fx:id="page4Button" text="4" styleClass="pagination-button"/>
        <Button fx:id="page5Button" text="5" styleClass="pagination-button"/>
        <Button fx:id="nextButton" text="다음" styleClass="pagination-button"/>
    </HBox>

    <!-- 통계 정보 -->
    <HBox spacing="20" alignment="CENTER" styleClass="stats-container">
        <VBox alignment="CENTER" styleClass="stat-item">
            <Label text="총 휴가신청" styleClass="stat-label"/>
            <Label fx:id="totalRequestsLabel" text="0" styleClass="stat-value"/>
        </VBox>
        <VBox alignment="CENTER" styleClass="stat-item">
            <Label text="승인 대기" styleClass="stat-label"/>
            <Label fx:id="pendingLabel" text="0" styleClass="stat-value"/>
        </VBox>
        <VBox alignment="CENTER" styleClass="stat-item">
            <Label text="승인됨" styleClass="stat-label"/>
            <Label fx:id="approvedLabel" text="0" styleClass="stat-value"/>
        </VBox>
        <VBox alignment="CENTER" styleClass="stat-item">
            <Label text="거부됨" styleClass="stat-label"/>
            <Label fx:id="rejectedLabel" text="0" styleClass="stat-value"/>
        </VBox>
    </HBox>
</VBox> 