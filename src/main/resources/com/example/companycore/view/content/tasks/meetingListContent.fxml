<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<?import java.net.URL?>

<VBox prefHeight="785.0" prefWidth="819.0" spacing="20" style="-fx-padding: 20;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.companycore.controller.tasks.MeetingListController">

    <!-- 상단 헤더 -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="회의 목록" />
    </HBox>

    <!-- 메인 콘텐츠 -->
    <VBox prefHeight="635.0" prefWidth="779.0" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

        <!-- 검색 및 필터 영역 -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Region HBox.hgrow="ALWAYS" />
            <ComboBox fx:id="searchComboBox" prefWidth="100" />
            <TextField fx:id="searchField" promptText="검색어를 입력하세요" prefWidth="200" />
            <Button fx:id="searchButton" text="검색" onAction="#handleSearch"
                    style="-fx-background-color: #5932EA; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;" />
        </HBox>

        <!-- 필터 영역 -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Region HBox.hgrow="ALWAYS" />
            <Label text="부서 필터:" />
            <ComboBox fx:id="departmentFilterComboBox" prefWidth="150" />
        </HBox>

        <!-- 테이블과 로딩 인디케이터를 겹치게 배치 -->
        <VBox alignment="CENTER" prefHeight="427.0" prefWidth="739.0">
            <TableView fx:id="meetingTable" prefHeight="427.0" prefWidth="739.0" maxHeight="427">
                <columns>
                    <TableColumn fx:id="colNumber" prefWidth="80.0" text="순서" />
                    <TableColumn fx:id="colTitle" prefWidth="200.0" text="회의 제목" />
                    <TableColumn fx:id="colDepartment" prefWidth="120.0" text="부서" />
                    <TableColumn fx:id="colAuthor" prefWidth="120.0" text="작성자" />
                    <TableColumn fx:id="colDate" prefWidth="140.0" text="일자" />
                    <TableColumn fx:id="colAttachment" prefWidth="60.0" text="첨부" />
                    <TableColumn fx:id="colAction" prefWidth="80.0" text="관리" />
                </columns>
            </TableView>
            
            <!-- 로딩 인디케이터 -->
            <ProgressIndicator fx:id="loadingIndicator" visible="false" managed="false" 
                             style="-fx-progress-color: #5932EA;" />
        </VBox>

        <ButtonBar prefHeight="40.0" prefWidth="200.0">
            <buttons>
                <Button fx:id="deleteBtn" mnemonicParsing="false" text="삭제"
                        style="-fx-background-color: #444951; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;"
                        onAction="#handleDelete"/>
                <Button fx:id="registerBtn" mnemonicParsing="false" text="등록"
                        style="-fx-background-color: #5932EA; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 6 15;"
                        onAction="#onRegisterClick"/>
            </buttons>
        </ButtonBar>

        <!-- 페이지네이션 -->
        <HBox spacing="20" alignment="CENTER">
            <Region HBox.hgrow="ALWAYS" />
            <Pagination fx:id="pagination" prefHeight="45.0" prefWidth="600.0"
                        style="-fx-page-information-visible: false; -fx-arrows-visible: true; -fx-background-color: transparent;">
                <stylesheets>
                    <URL value="@../common/pagination.css" />
                </stylesheets>
            </Pagination>
            <Region HBox.hgrow="ALWAYS" />
        </HBox>

        <Label style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;" />

    </VBox>

</VBox> 